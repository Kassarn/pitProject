<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ivan.pitproject.MainActivity">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/holes_landscape" />

    <Button

        android:id="@+id/close"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/depth"
        android:layout_alignBottom="@+id/depth"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:background="@null" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp">

        <Button
            android:background="@null"
            android:id="@+id/small"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="24dp" />

        <Button
            android:background="@null"
            android:id="@+id/medium"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="20dp" />

        <Button
            android:background="@null"
            android:id="@+id/large"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="155dp"
        android:id="@+id/linearLayout2"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp">

        <Button
            android:background="@null"
            android:id="@+id/small_shallow"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="38dp" />

        <Button
            android:background="@null"
            android:id="@+id/medium_shallow"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="22dp" />

        <Button
            android:background="@null"
            android:id="@+id/large_shallow"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="18dp"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/get_xy"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_marginBottom="20dp"
        android:background="@null" />


    <Button
        android:visibility="invisible"
        android:id="@+id/viewdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="viewdata" />





    <TextView
        android:visibility="invisible"
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"

        android:layout_alignLeft="@+id/get_xy"
        android:layout_alignStart="@+id/get_xy"
        android:layout_alignTop="@+id/btnMap"
        android:layout_marginTop="17dp"
      />

    <TextView
        android:visibility="invisible"
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="40dp"
        android:layout_alignLeft="@+id/info"
        android:layout_alignStart="@+id/info"
        android:layout_below="@+id/info"

        android:textSize="12dp" />

    <TextView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
            android:id="@+id/depth"
        android:layout_alignBaseline="@+id/btnMap"
        android:layout_alignBottom="@+id/btnMap"
        android:layout_alignLeft="@+id/size"
        android:layout_alignStart="@+id/size"
        />




</RelativeLayout>
